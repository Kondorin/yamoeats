<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    android:orientation="vertical"
    tools:context=".Opciones">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yamoeats"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Nuestra App"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:onClick="openApp"/>


        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="manualUsuario"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Manual de Usuario"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:text="Quejas Sugerencias"
            android:layout_marginBottom="20dp"
            android:background="@drawable/correo"
            android:textStyle="bold"
            android:textSize="50px"
            android:layout_gravity="center_horizontal"
            android:onClick="sendEmail"/>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="regresarLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Regresar a Login"/>
</RelativeLayout>

    </LinearLayout>



</LinearLayout>